
public class SumofPerfect {

	public static void main(String[] args) {

		int[] arr = { 1, 4, 2, 3, 6, 9, 16, 7 };
		int Rootsum = 0;
		int sum = 0;
		for (int i = 0; i < arr.length; i++) {

			if (Math.sqrt(arr[i]) == Math.floor(Math.sqrt(arr[i]))) {
				Rootsum = (int) (Rootsum + Math.sqrt(arr[i]));
				sum = sum + arr[i];
			}

		}
		System.out.println("Sum of roots of Perfect Squares " + Rootsum);
		System.out.println("Sum of perfect Squares " + sum);
	}

}
